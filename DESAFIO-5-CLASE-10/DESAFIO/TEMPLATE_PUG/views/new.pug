html
  head 
    title= "Products App"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

 
    style. 
      .container{
        border: 1px solid #ccc;
        border-radius: 10px;
        margin-top: 100px;
        width: 80%;
      }

  body
    div(class="container") 
      h1= "Nuevo Producto"
      
      form(action=url method=method)

        div(class="mb-3") 
          label(for="titleInput" class="form-label") Titulo
          input(type="text" class="form-control" name="title" id="titleInput" placeholder="Inserte el titulo")

        div(class="mb-3") 
          label(for="priceInput" class="form-label") Precio
          input(type="number" class="form-control" name="price" id="priceInput" placeholder="Inserte el precio")

        div(class="mb-3") 
          label(for="thumbnailInput" class="form-label") Imagen
          input(type="text" class="form-control" name="thumbnail" id="thumbnailInput" placeholder="Inserte una imagen")

        button(type="submit" class="btn btn-primary") #{button}

        a(href="/api/productos" class="btn btn-secondary") Ver Lista de prodcutos