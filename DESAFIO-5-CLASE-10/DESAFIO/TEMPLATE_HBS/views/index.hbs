<div class="card">   

    <h1 class="card-header">Lista de productos</h1>

    <div class="card-body">
        {{#if empty}}
            <p>No hay Productos cargados..</p>
        {{else}}
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                            <th scope="row">{{this.id}}</th>
                            <td>{{this.title}}</td>
                            <td>{{this.price}}</td>
                            <td>
                                {{#if this.thumbnail}}
                                    <img src="{{this.thumbnail}}" alt="{{this.title}}" style="width: 60px;"></td>
                                {{else}}
                                    <p>No hay imagenes cargadas</p>
                        </tr>
                    {{/each}}
                </tbody>
            </table>   
        {{/if}}
    </div>
    
    <a href="/" class="btn btn-primary text-center">Cargar nuevo producto</a>
</div>
