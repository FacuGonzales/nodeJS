
<%-include('./partials/head')%>

<div class="card">
    <h1 class="card-header">Listado de Productos</h1>
    
    <div class="card-body">
        <% if (products == []) { %>
            <p> No hay productos cargados.</p>
        <%} else {%>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <%products.forEach((el)=>{%>
                        <tr>
                            <th scope="row"><%=el.id%></th>
                            <td><%=el.title%></td>
                            <td><%=el.price%></td>
                            <td><img src=<%=el.thumbnail%> alt=<%=el.title%>" style="width: 60px;"></td>
                        </tr>
                    <%})%>
                </tbody>
            </table>   
        <%}%>
    </div>

    <div class="buttonBack">
        <a href="/" class="btn btn-primary text-center">Cargar nuevo producto</a>
    </div>
</div> 
